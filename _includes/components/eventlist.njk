<section>
	{% for event in eventlist | reverse %}
    {% if limit === undefined or loop.index0 < limit %}
      <article class="article-card" {% if post.url == url %} data-current="current item"{% endif %}>
        <h5>
          <a class="article-card__title" href="{{ event.url | url }}">
            {% if event.data.title %}
              {{ event.data.title }}
            {% else %}
              Untitled
            {% endif %}
          </a>
        <small>
          | <time datetime="{{ event.date | machineDate }}">{{ event.date | readableDate }}</time>
        </small>
        </h5>
        {% if event.data.event %}
          <p class="article-card__summary">
            {{ event.data.event }}
          </p>
        {% endif %}
        {% if event.data.tags and show_postslist_tags %}
          <p class="tag-list">
            {% for tag in event.data.tags %}
              {%- if tag != "events" -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
              <a class="tag btn" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
          </p>
        {% endif %}
      </article>
    {% endif %}
	{% endfor %}
</section>


